<h2 class="ui header">
  Task List
  <div class="sub header">
    Manage your task list and set your sub-task list.
  </div>
</h2>

<div class="ui divider"></div>

<table class="ui three column table segment">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @ksat_lists.each do |ksat_list| %>
      <tr id="<%= dom_id(ksat_list) %>">
        <td><%= ksat_list.title %></td>
        <td><%= ksat_list.description %></td>
        <td>
          <div class="ui buttons">
            <%= link_to '<i class="list layout icon"></i> List Items'.html_safe, ksat_list_task_items_path(ksat_list), class: "tiny ui button" %>
            <%= link_to '<i class="bullseye icon"></i> Show'.html_safe, ksat_list, class: "tiny ui button" %>
            <%= link_to '<i class="edit icon"></i> Edit'.html_safe, edit_ksat_list_path(ksat_list), class: "tiny ui button" %>
            <%= link_to '<i class="remove icon delete"></i> Delete'.html_safe, ksat_list, class: "tiny ui red button" , method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <th colspan="3">
        <%= link_to '<i class="add sign box icon"></i>' 'New Ksat list'.html_safe, new_ksat_list_path, class: "tiny ui teal button" %>
      </th>
    </tr>
  </tfoot>
</table>