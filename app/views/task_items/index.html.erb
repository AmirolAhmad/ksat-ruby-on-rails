<h2 class="ui header">
	<%= @ksat_list.title %>
	<div class="sub header">
		<%= @ksat_list.description %>
	</div>
</h2>

<div class="ui divider"></div>

<table class="task_items ui three column table segment">
  <thead>
    <tr>
      <th class="three wide">Completed?</th>
      <th class="eight wide">Content</th>
      <th class="five wide">Action</th>
    </tr>
  </thead>

  <tbody>
  	<% @ksat_list.task_items.each do |task_item| %>
			<tr class="task_items" id="<%= dom_id(task_item) %>">
				<td>
					<% if task_item.completed? %>
						<%= task_item.completed_at %>			
					<% else %>
						<%= link_to "Mark as Complete", complete_ksat_list_task_item_path(task_item), class: "tiny ui button", method: :patch %>
					<% end %>
				</td>
				<td>
					<%= task_item.content %>
				</td>
				<td>
					<div class="ui buttons">
						<%= link_to '<i class="edit icon"></i> Edit'.html_safe, edit_ksat_list_task_item_path(task_item), class: "tiny ui button" %>
						<%= link_to '<i class="remove icon delete"></i> Delete'.html_safe, ksat_list_task_item_path(task_item), class: "tiny ui red button", method: :delete, data: { confirm: "Are you sure?" } %>
					</div>
				</td>
			</tr>
		<% end %>
  </tbody>
  <tfoot>
  	<tr>
      <th colspan="3">
      	<%= link_to '<i class="add sign box icon"></i> New Task Items'.html_safe, new_ksat_list_task_item_path, class: "tiny ui teal button" %>
      </th>
    </tr>
  </tfoot>
</table>