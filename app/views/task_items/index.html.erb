<h1><%= @ksat_list.title %></h1>

<ul class="task_items">
	<% @ksat_list.task_items.each do |task_item| %>
	<li id="<%= dom_id(task_item) %>">
		<%= task_item.content %>
		<%= link_to "Edit", edit_ksat_list_task_item_path(task_item) %>
		<%= link_to "Delete", ksat_list_task_item_path(task_item), method: :delete, data: { confirm: "Are you sure?" } %>
	</li>
	<% end %>
</ul>

<p>
	<%= link_to "New Task Items", new_ksat_list_task_item_path %>
</p>